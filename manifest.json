{
    "manifest_version": 2,

    "name": "YouTube™ Auto-replay",
    "description": "This extension enables YouTube™ to automatically replay videos",
    "version": "1.0",

    "browser_action": {
        "default_popup": "index.html"
    },
    "icons": {
        "16": "img/icon16.ico",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["js/autoreplay.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}
